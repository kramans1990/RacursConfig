<UserControl x:Class="RacursConfig.Controls.NumberField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RacursConfig.Controls"
             mc:Ignorable="d" x:Name="numberFieldControl"
             >
    <UserControl.Resources>
      
    </UserControl.Resources>
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox   BorderThickness="2" BorderBrush="Gray"  Text="{Binding Text, ElementName=numberFieldControl}"   x:Name="textValidateField">
            <!--<TextBox.Resources>
                <--><!--Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>                  
                </Style>--><!--
               
            </TextBox.Resources>-->
           
          
        </TextBox>
    <TextBlock   Grid.Column="1" x:Name="textValidateBlock" TextAlignment="Left" ></TextBlock>
       
    </Grid>

</UserControl>
